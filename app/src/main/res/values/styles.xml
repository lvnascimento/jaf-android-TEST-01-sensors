        <item name="android:background">@color/light_background</item>
    </style>
    <style name="SensorLabelsStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8pt</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">5px</item>
    </style>
    <style name="SensorValuesStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">6pt</item>
        <item name="android:padding">5px</item>
    </style>
    <style name="SensorAxisStyle" parent="SensorValuesStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">6pt</item>
        <item name="android:padding">5px</item>
    </style>
</resources>